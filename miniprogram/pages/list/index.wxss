/* miniprogram/pages/list/index.wxss */
page {
  background-color: #fff;
}

.background {
  margin: 60rpx 0;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  min-height: 100vh;
  overflow-x: hidden;
}

.container.empty {
  background: white;
}

.container:last-child {
  margin-bottom: calc(var(--footer-height) + 24px);
}

.books_list_wrpa {
  padding: 60rpx 40rpx;
}

.books_list {
  display: flex;
  flex-wrap: wrap;
}

.books_list_item {
  width: calc((100% - 80rpx) / 3);
  margin-bottom: 60rpx;
  display: flex;
  justify-content: center;
  margin-right: 40rpx;
}

.books_list_item:nth-child(3n) {
  margin-right: 0;
}

.books_photo {
  width: 150rpx;
  height: 225rpx;
  border-radius: 6rpx;
}