page {
  background-color: #f1f1f1;
}

.background {
  margin: 60rpx 0;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  min-height: 100vh;
  overflow-x: hidden;
}

.container.empty {
  background: white;
}

.container:last-child {
  margin-bottom: calc(var(--footer-height) + 24px);
}

.search_bar {
  position: fixed;
  top: 0;
  width: 100%;
}

.books_list {
  padding: 110rpx 40rpx 200rpx;
  display: flex;
  flex-wrap: wrap;
}

.books_list_item {
  width: calc((100% - 80rpx) / 3);
  margin-bottom: 55rpx;
  display: flex;
  justify-content: center;
  margin-right: 40rpx;
}

.books_list_item:nth-child(3n) {
  margin-right: 0;
}

.books_photo {
  width: 170rpx;
  height: 255rpx;
  border-radius: 6rpx;
  box-shadow: 2px 6px 10px #bbb;
  border-bottom: 1rpx solid #ccc;
}

.loading {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.loadmore {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.loaddone {
  color: #999;
  font-size: 24rpx;
  text-align: center;
}