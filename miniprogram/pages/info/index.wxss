page {
  background-color: #e7ebee;
}

.container .photo {
  margin: 50rpx auto 80rpx;
  width: 240rpx;
  height: 360rpx;
  display: block;
  box-shadow: 2px 4px 8px #ababab;
  border-radius: 6rpx;
  overflow: hidden;
}

.book_detail {
  padding: 40rpx;
  font-size: 26rpx;
  background-color: #fff;
  height: calc(100vh - 610rpx);
  line-height: 1.8;
  color: #999;
  border-radius: 30rpx 30rpx 0 0;
}

.book_detail>view {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.book_detail .label {
  width: 150rpx;
}

.book_detail .text {
  flex: 1;
  color: #333;
  text-align: right;
}

.bottom_btn {
  position: fixed;
  right: 0;
  left: 0;
  padding: 20rpx;
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
  border-bottom: 0;
}